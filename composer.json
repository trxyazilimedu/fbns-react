{
    "name": "mjcodebase/fbns-react",
    "description": "A PHP client for the FBNS built on top of ReactPHP",
    "keywords": [
        "FBNS",
        "Client",
        "PHP"
    ],
    "type": "library",
    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
        {
            "name": "Abyr Valg",
            "email": "valga.github@abyrga.ru"
        },
        {
            "name": "Michael Johnson",
            "homepage": "https://t.me/mjohnsoncode",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Fbns\\Client\\": "src/"
        }
    },
    "require": {
        "php": "^5.6|^7.0|^8.0",
        "ext-mbstring": "*",
        "ext-zlib": "*",
        "evenement/evenement": "~2.0|~3.0",
        "react/event-loop": "0.4.3",
        "react/promise": "^2.7",
        "react/socket": "^1.3",
        "mjcodebase/net-mqtt": "^1.3",
        "psr/log": "^1.0"
    },
    "require-dev": {
        "monolog/monolog": "~1.23",
        "friendsofphp/php-cs-fixer": "~2.4"
    },
    "suggest": {
        "ext-event": "For more efficient event loop implementation.",
        "ext-gmp": "To be able to run this code on x86 PHP builds."
    },
    "scripts": {
        "codestyle": "php-cs-fixer fix --config=.php_cs"
    }
}
